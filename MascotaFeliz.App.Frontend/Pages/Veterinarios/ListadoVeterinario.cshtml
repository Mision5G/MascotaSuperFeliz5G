@page
@model MascotaFeliz.App.Frontend.Pages.ListadoVeterinarioModel
@{
}
<h1>Listado de Veterinarios</h1>
<section id ="banner-Veterinarios"> 
  </section>
<table class="Table" id="tbl_veterinarios">
<thead>
    <tr>
    <th>Cedula</th>
    <th>Nombre</th>
    <th>Apellido</th>
    <th>Detalles</th>
    <th>Editar</th>
    </tr>
</thead>
<tbody>
@foreach (var veterinario in Model.listadoVeterinario  )
{
    <tr>

        <td> @veterinario.Cedula</td>
        <td> @veterinario.Nombres</td> 
        <td> @veterinario.Apellidos</td>    

        <td> 
            <a class= "fa-solid fa-magnifying-glass-plus" asp-page=".\DetalleVeterinario" asp-route-veterinarioId="@veterinario.Id">
                
            </a>
        </td>
        <td>
            <a class="fa-solid fa-pen-to-square" asp-page="./EditarVeterinario" asp-route-veterinarioId="@veterinario.Id">
                    
            </a>
        </td>

    </tr>
}
</tbody>
</table>

 <div>
      <a href="./EditarVeterinario" class="boton-veterinario">Adicionar Veterinario</a>
</div>
