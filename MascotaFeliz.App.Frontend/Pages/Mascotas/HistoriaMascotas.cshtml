@page
@model MascotaFeliz.App.Frontend.Pages.HistoriaMascotasModel
@{
}

<h1>Historia clínica</h1>

<div>
    Fecha inicial: @Model.historia.FechaInicial
</div>

<h1>Listado de Visitas</h1>
<table class="Table" id="tbl_Visitas">
<thead>
    <tr>
    <th>Fecha Inicial</th>
    <th>Temperatura</th>
    <th>Peso</th>
    <th>Frecuencia Respiratoria</th>
    <th>Frecuencia Cardiaca</th>
    <th>Estado de ánimo</th>
    <th>Recomendaciones</th>
    <th>Veterinario</th>
    <th>Editar</th>

       
    </tr>
</thead>
<tbody>

@foreach (var VisitaPyP in Model.listadoVisitas)
{
    <tr>

        <td> @VisitaPyP.FechaVisita </td>
        <td> @VisitaPyP.Temperatura </td> 
        <td> @VisitaPyP.Peso</td>
        <td> @VisitaPyP.FrecuenciaRespiratoria</td>
        <td> @VisitaPyP.FrecuenciaCardiaca</td>
        <td> @VisitaPyP.EstadoAnimo</td>
        <td> @VisitaPyP.Recomendaciones</td>
        <td> @VisitaPyP.Veterinario.Nombres</td>


    <td>
            <a class="fa-solid fa-book-medical" asp-page="/Visitas/AgregarVisita" asp-route-visitaId="@VisitaPyP.Id">
                    
            </a>
        </td> 
    </tr>
}
</tbody>
</table>
<td>
        <a class="fa-solid fa-book-medical" asp-page="/Visitas/AgregarVisita" asp-route-historiaId="@Model.historia.Id">
                    
            </a>
</td> 

